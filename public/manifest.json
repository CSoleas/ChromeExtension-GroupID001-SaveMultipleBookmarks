{
    "manifest_version": 3,
    "name": "Save Multiple Bookmarks",
    "description": "Save multiple bookmarks effortlessly in Chrome",
    "permissions": ["bookmarks", "tabs"],
    "version": "1.0",
    "icons": {
        "16": "/icons/16.png",
        "32": "/icons/32.png",
        "128": "/icons/128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "/icons/16.png",
            "32": "/icons/32.png",
            "128": "/icons/128.png"
        }
    },

    "commands": {
        "_execute_action": {
            "suggested_key": {
                "windows": "Alt+S",
                "mac": "Ctrl+Shift+1",
                "chromeos": "Ctrl+Shift+1",
                "linux": "Ctrl+Shift+1"
            }
        }
    }
}
